{
	"version": "1.0.0",
	"configurations": [
	  {
		"name": "Run Extension",
		"type": "extensionHost",
		"request": "launch",
		"runtimeExecutable": "${execPath}",
		"args": ["--extensionDevelopmentPath=${workspaceFolder}"]
	  },
	  {
		"name": "Extension Tests",
		"type": "extensionHost",
		"request": "launch",
		"runtimeExecutable": "${execPath}",
		"args": [
		  "--extensionDevelopmentPath=${workspaceFolder}",
		  "--extensionTestsPath=${workspaceFolder}/test/suite/index"
		]
	  }
	]
  }